{
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6", "dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": ["node", "@types/jest"],
        "typeRoots": ["./node_modules/@types"]
    },
    "typedocOptions": {
        "mode": "modules",
        "out": "docs"
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"]
}
